<div class="topbar-container">
    <a href="/">
        <h1 class="logo">board</h1>
    </a>
    <div class="signin-signup-container">
        {{#if logged_in}}
            
            <a id="profile" class="button-xlarge pure-button board-button" href="/profile">Profile</a>
            <button id="logout" class="button-xlarge pure-button board-button">Logout</button>
            <a id="create-board" class="button-xlarge pure-button board-button" href="/create-board">Create Board</a>

        {{else}}
            {{#if atLogin}}
                <button type="button" class="pure-button board-button" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Sign-up</button>

                <!-- Modal -->
                <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                
                <div class="modal-dialog">
                    <div class="modal-content">
                    <div class="modal-header board-header">
                        {{> svgSmall }}
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        <h1 class="modal-title fs-1 animate-flicker" id="staticBackdropLabel">Sign-up</h1>
                        <h1 class="modal-title fs-3" id="staticBackdropLabel">board</h1>
                    </div>
                    <div class="modal-body">
                        <form class="pure-form pure-form-aligned sign-up-form">
                            <fieldset>
                                <div class="pure-control-group">
                                    <label for="aligned-name">Username</label>
                                    <input type="text" id="aligned-name" placeholder="Username" />
                                </div>
                                <div class="pure-control-group">
                                    <label for="aligned-password">Password</label>
                                    <input type="password" id="aligned-password" placeholder="Password" />
                                </div>
                                <div class="pure-control-group">
                                    <label for="aligned-email">Email Address</label>
                                    <input type="email" id="aligned-email" placeholder="Email Address" />
                                </div>
                                <div class="pure-controls modal-submit text-center">
                                    <label for="aligned-cb" class="pure-checkbox">
                                        <input type="checkbox" id="aligned-cb" /> I&#x27;ve read the terms and conditions
                                    </label>
                                    <button type="submit" id="sign-up-button" class="pure-button pure-button-primary board-button">Submit</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                    </div>
                </div>
                </div>
            {{else}}
                <a id="sign-in-up" class="button-xlarge pure-button board-button" href="/login">Sign In/Sign Up</a>
            {{/if}}
        {{/if}}
    </div>
</div>

{{> search-details }}