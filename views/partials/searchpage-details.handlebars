<div class="col-sm-6 mb-3 mb-sm-0">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">
                {{#each allTags as |tag|}}
                {{tag_name}}{{#unless @last}}, {{/unless}}
                {{/each}}
            </p>
            <div>
                <a href="board/{{id}}/create-post" class="pure-button board-button" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Create a post</a>
            </div>
        </div>
    </div>
</div>
